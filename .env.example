# NUFI API Configuration
# Get your API key from https://docs.nufi.mx/
NUFI_API_KEY=your_api_key_here

# NUFI API Base URL (Azure API Management endpoint)
NUFI_API_BASE_URL=https://nufi.azure-api.net

# Optional: Enable demo mode (uses mock data instead of real API)
# Set to 'true' to use mock data for testing without consuming API credits
NUFI_DEMO_MODE=false

# Server Configuration
PORT=3002
NODE_ENV=production

# Session Configuration
# IMPORTANT: Generate a strong random secret for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Authentication - User Management
# Format: username:password:fullname:role,username2:password2:fullname2:role2
# Example: admin:SecurePass123:Admin User:admin,john:Pass456:John Doe:user
AUTHORIZED_USERS=admin:ChangeThisPassword:Administrator:admin

# CORS Configuration (Production)
# Comma-separated list of allowed origins
# Example: https://yourapp.com,https://www.yourapp.com
ALLOWED_ORIGINS=http://localhost:3000
